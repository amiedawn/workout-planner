<div id="index-banner">
  <div class="section no-pad-bot">
    <div class="container-image">
      <br><br>
      <h1 class="header center text-black"> Cardio
      </h1>
      <div class="row center">
        <h5 class="header col s12 light">Find a Cardio class below and save it to your dashboard.</h5>
      </div>
      <br><br>
    </div>
  </div>
</div>

{{!-- plans --}}
{{#if classes.length}}
<form class="new-plan-form">
  <ul class="collection">
    {{#each classes as |class|}}
    <li class="collection-item avatar">
      <i class="material-icons circle">event</i>
      <span>
        <p>
          <label>
            <input type="checkbox" data-category_name="cardio" data-id="{{id}}" data-class_name="{{class_name}}" />
            <span class="meta">Class Name:{{class_name}} </span>
          </label>
        </p>
      </span>
    </li>
    {{/each}}
  </ul>

</form>

{{else}}
<br>
<!--if no plans yet, tell user-->
<h3>No current classes in this category</h3>
{{/if}}


<script src="/javascript/cardio.js"></script>