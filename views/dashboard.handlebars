
<div id="index-banner">
    <div class="section no-pad-bot">
        <div class="container-image">
            <br><br>
            <h1 class="header center text-black"> Dashboard: My Activity
            </h1>
            <div class="row center">
                <h5 class="header col s12 light">Instructions on how to use dashboard can go here.</h5>
                <a href="/dashboard/create/"><button id="add-plan" class="btn">
                        Create a New Plan</button>
                </a>
            </div>
            <br><br>
        </div>

    </div>
</div>

{{!-- plans --}}
{{#if plans.length}}
<ul class="collection">
    {{#each plans as |plan|}}
    <li class="collection-item avatar">
        <i class="material-icons circle">event</i>
        <span class="title">Title of Plan: {{plan_title}}</span>
         <p class="meta">Category Name: {{category_name}} <br>
         Class Name: {{class_name}}</p> <br>
         <p class="meta">
      <span>
          Created by {{user.username}} on {{format_date created_at}}
      </span>
      |
     <a href="/plan/{{id}}">Display Plan</a>
     |
     <a href="/plan/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}} </a>
  </p>
        <p>Time and Date <br>
            Notes
        </p>
        <a href="/dashboard/edit/{{plan.id}}"><button class="btn">Edit Plan</button></a>
    </li>
     {{/each}}
    </ul>
</section>

{{else}}
<br>
<!--if no plans yet, tell user-->
<h3>No plans have been submitted by this user</h3>
{{/if}}


   

<script src="../public/javascript/add-plan.js"></script>