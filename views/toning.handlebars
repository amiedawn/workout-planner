<div id="index-banner">
  <div class="section no-pad-bot">
    <div class="container-image">
      <br><br>
      <h1 class="header center text-black"> Toning
      </h1>
      <div class="row center">
        <h5 class="header col s12 light">Find a Toning class below and save it to your dashboard.</h5>
        <button>
          <a href="/dashboard" class="waves-effect waves-light btn">Visit Your Dashboard</a>
        </button>
      </div>
      <br><br>
    </div>
  </div>
</div>

{{!-- rach design --}}
{{#if classes.length}}
<section class='container'>
  <form class="new-plan-form">
  {{#each classes as |class|}}
  <div class="row">
    <div class="col s6">
      <div class="card white darken-1">
        <div class="card-content">
          <span class="card-title">{{class_name}} </span>
          <label>
            <input type="checkbox" data-category_name="toning" data-id="{{id}}" data-class_name="{{class_name}}" />	
            <span>Add to plan</span>
          </label>
        </div>
      </div>
    </div>
    {{/each}}
  </form>	   
</section>

{{else}}
<br>
<!--if no plans yet, tell user-->
<h3>No current classes in this category</h3>
{{/if}}

<script src="/javascript/checkbox.js"></script>
<script src="/toning.js"></script>